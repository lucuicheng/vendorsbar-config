{
    "configuration": {
        "name": "Default",
        "status": "trace",
        "monitorInterval": "1800",
        "properties": {
            "property": [
                {
                    "name": "LOG_HOME",
                    "value": "vendorsbar-order"
                }
            ]
        },
        "appenders": {
            "Console": {
                "name": "Console-Appender",
                "target": "SYSTEM_OUT",
                "PatternLayout": {
                    "pattern": "%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"
                }
            },
            "RollingFile": [
                {
                    "name": "running-trace",
                    "fileName": "${LOG_HOME}/trace.log",
                    "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/trace-%d{yyyy-MM-dd-HH}-%i.log",
                    "PatternLayout": {
                        "pattern": "%date{yyyy-MM-dd HH:mm:ss} %level [%thread][%file:%line] - %msg%n"
                    },
                    "Filters": {
                        "ThresholdFilter": [
                            {
                                "level": "TRACE"
                            },
                            {
                                "level": "DEBUG",
                                "onMatch": "DENY",
                                "onMismatch": "NEUTRAL"
                            }
                        ]
                    },
                    "Policies": {
                        "TimeBasedTriggeringPolicy": {
                            "modulate": "true",
                            "interval": "4"
                        },
                        "SizeBasedTriggeringPolicy": {
                            "size": "20 MB"
                        }
                    },
                    "DefaultRolloverStrategy": {
                        "max": "20"
                    }
                },
                {
                    "name": "running-info",
                    "fileName": "${LOG_HOME}/info.log",
                    "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/info-%d{yyyy-MM-dd-HH}-%i.log",
                    "PatternLayout": {
                        "pattern": "%date{yyyy-MM-dd HH:mm:ss} %level [%thread][%file:%line] - %msg%n"
                    },
                    "Filters": {
                        "ThresholdFilter": [
                            {
                                "level": "INFO"
                            },
                            {
                                "level": "WARN",
                                "onMatch": "DENY",
                                "onMismatch": "NEUTRAL"
                            }
                        ]
                    },
                    "Policies": {
                        "TimeBasedTriggeringPolicy": {
                            "modulate": "true",
                            "interval": "4"
                        },
                        "SizeBasedTriggeringPolicy": {
                            "size": "50 MB"
                        }
                    },
                    "DefaultRolloverStrategy": {
                        "max": "20"
                    }
                },
                {
                    "name": "running-error",
                    "fileName": "${LOG_HOME}/error.log",
                    "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/error-%d{yyyy-MM-dd-HH}-%i.log",
                    "PatternLayout": {
                        "pattern": "%date{yyyy-MM-dd HH:mm:ss} %level [%thread][%file:%line] - %msg%n"
                    },
                    "Filters": {
                        "ThresholdFilter": [
                            {
                                "level": "ERROR"
                            }
                        ]
                    },
                    "Policies": {
                        "TimeBasedTriggeringPolicy": {
                            "modulate": "true",
                            "interval": "4"
                        },
                        "SizeBasedTriggeringPolicy": {
                            "size": "20 MB"
                        }
                    },
                    "DefaultRolloverStrategy": {
                        "max": "20"
                    }
                }
            ]
        },
        "loggers": {
            "logger": [
                {
                    "name": "org.springframework",
                    "level": "INFO"
                },
                {
                    "name": "org.apache.http",
                    "level": "INFO"
                },
                {
                    "name": "org.hibernate",
                    "level": "INFO"
                },
                {
                    "name": "org.mybatis.spring",
                    "level": "INFO"
                },
                {
                    "name": "com.vich.settings",
                    "level": "INFO",
                    "appender-ref": {
                        "ref": "Order-Appender"
                    }
                }
            ],
            "root": {
                "level": "all",
                "appender-ref": [
                    {
                        "ref": "Console-Appender"
                    },
                    {
                        "ref": "running-trace"
                    },
                    {
                        "ref": "running-info"
                    },
                    {
                        "ref": "running-error"
                    }
                ]
            }
        }
    }
}
